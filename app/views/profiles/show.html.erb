<% provide(:title, "#{@user.name}'s Profile") %>
<div class="row">
  <aside class="span4">
    <section class"left">
      <h3>
        <%= gravatar_for(@user) %>
        <%= @user.name %>
      </h3>
      <a href="http://gravatar.com/emails">Change gravatar image</a>
    </section>
    <nav class="profilenav span8">
      <ul>
        <li><%= link_to "Create Dispatch", new_request_path, class: "btn" %></li>
        <li><%= link_to "Find Dispatch", '#', class: "btn" %></li>
        <li><%= link_to "Edit Profile", edit_user_registration_path, class: "btn" %></li>
      </ul>
    </nav>
  </aside>
  <div class="span8">
    <% if @user.requests.any? %>
      <h2>My Requests</h2>
      <ol>
        <%= render @requests %>
      </ok>
      <%= will_paginate @requests %>
    <% end %>
  </div>
</div>